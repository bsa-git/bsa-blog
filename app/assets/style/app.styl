// --- MAIN --- //
main#page-content
//min-height: 'calc(100vh - %s - %s)' % ($toolbar-height $footer-height)
  min-height: 'calc(100vh - %s)' % ($footer-height)

iframe#my-resume
  min-height: 'calc(100vh - %s)' % ($footer-height)
  min-width 100%
  marginheight = "0"
  marginwidth = "0"

// --- ERROR --- //
#img-error
  height: 20vh

// --- TITLES --- //
.page-title
  margin-bottom: 40px

.page-title .subheading
  color: $grey.darken-1

.card-title .subheading
  color: $grey.darken-1

.list .subheader {
  height: 48px !important
}

// --- EXOTIC --- //
.exotic--dark
  color: white //$grey.lighten-4
  text-shadow: 0 3px 3px #212121;
  font-family: playball, sans-serif;

.exotic--dark .icon
  color: $grey.lighten-2

.exotic--light
  color: $grey.darken-4
  text-shadow: 0 3px 3px #bdbdbd;
  font-family: playball, sans-serif;

.exotic--light .icon
  color: $grey.darken-4

// --- GRADIENT --- //
.gradient--light {
  background: #fefcea;
  background: linear-gradient(to top, #fefcea, #f1da36);
  padding: 10px;
  border: 1px solid #333;
}

// --- BLOG --- //

.date-publication {
  font-style: italic;
}


.blog-post h1 {
  color: #757575;
  font: 300 34px / 40px Roboto, sans-serif;
  letter-spacing: -.01em;
  margin: 40px 0 20px;
}

.blog-post h2 {
  border-bottom: 1px solid #ebebeb;
  font: 300 24px / 32px Roboto, sans-serif;
  letter-spacing: -.01em;
  margin: 40px 0 20px;
  padding-bottom: 3px;
}

.blog-post h3 {
  font: 400 20px / 32px Roboto, sans-serif;
  margin: 32px 0 16px;
}

.blog-post h4 {
  font: 400 18px/32px Roboto,sans-serif;
  margin: 32px 0 16px;
}

.blog-post table {
  border-collapse: collapse;
  border-spacing: 0;
  font: 14px/20px Roboto,sans-serif;
  margin: 16px 0;
}

.blog-post tbody {
  display: table-row-group;
  vertical-align: middle;
  border-color: inherit;
}

.blog-post th {
  color: #fff;
  font: 500 16px/24px Roboto,sans-serif;
  height: 48px;
  padding: 8px;
  vertical-align: middle;
  background: #78909c;
  border: 0;
  border-top: 1px solid #cfd8dc;
  text-align: left;
}

.blog-post td {
  background: rgba(255,255,255,.95);
  border: 1px solid #cfd8dc;
  vertical-align: top;
  color: #212121;
  padding: 7px 8px 8px;
}


// --- HIGHLIGHT --- //

code.highlight {
  width: 100%;
  background: #f5f5f5;
  margin-top: 20px;
  margin-bottom: 20px;
}

